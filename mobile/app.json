{
  "expo": {
    "name": "2Mins Challenge",
    "slug": "2mins-challenge",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "scheme": "2mins",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#0a0a0a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.twomins.challenge",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to capture challenge completion photos",
        "NSLocationWhenInUseUsageDescription": "This app needs location access for location-based challenges",
        "NSPhotoLibraryUsageDescription": "This app needs photo library access to save challenge photos"
      }
    },
    "android": {
      "package": "com.twomins.challenge",
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-camera",
      "expo-location",
      "expo-notifications",
      "expo-secure-store",
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
